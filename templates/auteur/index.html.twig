{% extends 'base.html.twig' %}

{% block title %}Auteur index
{% endblock %}

{% block body %}
	{% for message in app.flashes('info') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<h1>Auteurs</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom_prenom</th>
				<th>Sexe</th>
				<th>Date_de_naissance</th>
				<th>Nationalite</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for auteur in auteurs %}
				<tr>
					<td>{{ auteur.id }}</td>
					<td>{{ auteur.nomPrenom }}</td>
					<td>{{ auteur.sexe }}</td>
					<td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
					<td>{{ auteur.nationalite }}</td>
					<td>
						<a href="{{ path('auteur_show', {'id': auteur.id}) }}" class="btn btn-success">show</a>
						<a href="{{ path('auteur_edit', {'id': auteur.id}) }}" class="btn btn-warning">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<nav aria-label="Page navigation example">
		<ul class="pagination">
			<li class="page-item">
				{{knp_pagination_render(auteurs) }}
			</li>
		</ul>
	</nav>
	<a href="{{ path('auteur_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
