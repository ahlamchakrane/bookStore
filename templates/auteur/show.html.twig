{% extends 'base.html.twig' %}

{% block title %}Auteur

{% endblock %}

{% block body %}
	<style>
		body {
			margin: 40px;
		}
	</style>
	<br>
	<h2>{{ auteur.nomPrenom }}</h2>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>

				<th>Nom_prenom</th>
				<th>Genre</th>
				<th>Date_de_naissance</th>
				<th>Nationalite</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<td>{{ auteur.id }}</td>
			<td>{{ auteur.nomPrenom }}</td>
			<td>{{ auteur.sexe }}</td>
			<td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
			<td>{{ auteur.nationalite }}</td>
			<td>
				<a href="{{ path('auteur_edit', {'id': auteur.id}) }}" class="btn btn-warning">
					<i class="bi bi-pen-fill"></i>
				</a>
				<a class="btn">
					{{ include('auteur/_delete_form.html.twig') }}
				</a>
			</td>
		</tbody>
	</table>
	<a href="{{ path('auteur_index') }}" class="btn btn-secondary">back to list</a>
{% endblock %}
