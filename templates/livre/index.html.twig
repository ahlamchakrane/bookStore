{% extends 'base.html.twig' %}

{% block title %}Livre index
{% endblock %}

{% block body %}
	{% for message in app.flashes('info') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<h1>Livre index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Isbn</th>
				<th>Titre</th>
				<th>Nombre_page</th>
				<th>Date_de_parution</th>
				<th>Note</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for livre in livres %}
				<tr>
					<td>{{ livre.id }}</td>
					<td>{{ livre.isbn }}</td>
					<td>{{ livre.titre }}</td>
					<td>{{ livre.nombrePage }}</td>
					<td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ livre.note }}</td>
					<td>
						<a href="{{ path('livre_show', {'id': livre.id}) }}" class="btn btn-success">show</a>
						<a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn btn-warning">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('livre_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
