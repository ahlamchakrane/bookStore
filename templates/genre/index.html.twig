{% extends 'base.html.twig' %}

{% block title %}Genre index
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<h1>Genre index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for genre in genres %}
				<tr>
					<td>{{ genre.id }}</td>
					<td>{{ genre.nom }}</td>
					<td>
						<a href="{{ path('genre_show', {'id': genre.id}) }}" class="btn btn-success">show</a>
						<a href="{{ path('genre_edit', {'id': genre.id}) }}" class="btn btn-warning">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('genre_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
